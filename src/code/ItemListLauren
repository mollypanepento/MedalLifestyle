	public static void printList(ArrayList<Item1> list) {
		for(Item1 i: list) {
			System.out.println(i.getName());
		}
	}
	
	//https://www.javatpoint.com/how-to-sort-arraylist-in-java
	public static ArrayList<Item1> sortLowPrice(ArrayList<Item1> list){
		ArrayList<Item1> newList = new ArrayList<Item1>(list);
		//printList(newList); 
		newList.sort(Comparator.comparing(Item1::getPrice));
		return newList; 
	}
	public static ArrayList<Item1> sortHighPrice(ArrayList<Item1> list){
		ArrayList<Item1> newList = new ArrayList<Item1>(list);
		newList.sort(Comparator.comparing(Item1::getPrice).reversed());
		return newList; 
	}
	public static ArrayList<Item1> findList(String depot){
		if(depot.equals("Clothes")) {
			return clothes;
		}else if(depot.equals("Kithen")) {
			return kitchen;
		}else if(depot.equals("Jewelry")) {
			return jewelry;
		}else if(depot.equals("Skin Care")) {
			return skincare;
		}else if(depot.equals("Fitness")) {
			return fitness;
		}else if(depot.equals("Furniture")) {
			return furniture;
		}else if(depot.equals("Stationary")) {
			return stationary;
		}else if(depot.equals("Electronics")) {
			return electronics;
		}
		return null; 
	}
	
	 public static void main(String[] args) {
		ItemList i = new ItemList(); 
		//i.printList();
		printList(clothes);
		System.out.println();
		printList(sortHighPrice(clothes));
		System.out.println();
		printList(clothes);
		System.out.println();
		printList(sortLowPrice(clothes));
		System.out.println(clothes.size());
		
	}
	
	public Item1 getItem1(String name) {
		for(int i=0; i<ItemList.size();i++) {
			if(ItemList.get(i).getName()==name);
				return ItemList.get(i);
		}
		return null;
	}
	
